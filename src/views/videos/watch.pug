extends ../base.pug

block content 
    div#videoContainer.basicScreen
        video(src="/" + video.fileUrl).videoContainer__screen
        div#videoControls
            div.videoContainer__videoControls-timeline
                input(type="range", step="1", value=0, min="0")#timeline
            div.videoContainer__videoControls-btn
                button#play
                    i.fas.fa-play
                button#volumeBtn
                    i.fas.fa-volume-up
                input(type="range", step="0.01", value=0.5, min="0", max="1")#volumeBar
                div
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
                div.videoContainer__videoControls-btn-empty
                div
                    button#fullscreenBtn
                        i.fas.fa-expand


    //-
        div
            p=video.description
            small=video.createdAt
        div
            small Uploaded by 
                if (video.owner)
                    a(href=`/users/${video.owner._id}`)=video.owner.name
                else
                    small Unknown
        if (video.owner)
            if String(video.owner._id) === String(loggedInUser._id)
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts
    script(src="../static/js/videoPlayer.js")